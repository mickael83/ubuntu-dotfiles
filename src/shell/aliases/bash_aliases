alias gitp='git config --local user.name "Michael Pinheiro"; git config --local user.email "mickael.pinheiro@gmail.com"'


# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

# Load OS specific aliases.

